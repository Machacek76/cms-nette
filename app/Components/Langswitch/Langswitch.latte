{* Latte template *}

{block content}

<span class="langswitch">
	<li n:foreach="$links as $link" {if !$link['link']}class="active"{/if}>
		{if $link['link']}
			<a href="{$link['link']}"><i class="{$link['icon']}" n:if="$link['icon']"></i> {$link['title']}</a>
		{else}
			{$link['title']}
		{/if}
	</li>
</span>